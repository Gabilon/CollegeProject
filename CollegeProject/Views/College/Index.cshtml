@model CollegeProject.Models.ViewModelDemo


@{
    ViewBag.Title = "Index";
}

<h2>All List of Employees, Departments and Courses</h2>
<br />

<h3>Employees</h3>
<br />
<table class="table">

    <tr>
        <th>
            Employee Name
        </th>
        <th>
            Employee Code
        </th>
        <th>
            Courses
        </th>
        <th>
            Department Code
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.allEmployees)
    {


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepCode)
            </td>
        </tr>
    }
</table>

<h3>Departments</h3>
<br />

<table class="table">
    <tr>
        <th>
            Department Name
        </th>
        <th>
            Department Code
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model.allDepartments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepCode)
            </td>
        </tr>
    }
</table>

<h3>Courses</h3>
<br />
<table class="table">
    <tr>
        <th>
            Course Name
        </th>
        <th>
            Course Code
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.allCourses)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
        </tr>
    }

</table>